@model HenriJervsonGrainWarehouse.Models.WarehouseViewModel

@{
    ViewData["Title"] = "SendMass";
}

<h1>SendCargo</h1>

<h4>Fill in the blanks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateCargoLeavingMass">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-control" >
            <select asp-for="CarNumber" asp-items="Model.CarNumber">
                <option value="">Car Number</option>
            </select>
            </div>
            <div class="form-group">
                <label asp-for="LeavingMass" class="control-label"></label>
                <input asp-for="LeavingMass" class="form-control" />
                <span asp-validation-for="LeavingMass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send Cargo" class="btn btn-primary" />
                <a asp-action="UpdateCargoLeavingMass"></a>
            </div>
        </form>
    </div>
</div>