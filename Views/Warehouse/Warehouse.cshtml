@model IEnumerable<HenriJervsonGrainWarehouse.Models.WarehouseViewModel>

@{
    ViewData["Title"] = "Warehouse";
}

<h1>Warehouse</h1>
<h4>All Data about Entering And Leaving Cargo Is Shown Here</h4>

<form asp-controller="Warehouse" asp-action="Index" method="get">
    <p>
        <label for="CarNumber">Car Number:</label>
        <select asp-for="CarNumber" asp-items="Model.CarNumber">
            <option value="">All</option>
        </select>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CarNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnteringMass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeavingMass)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnteringMass)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LeavingMass)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>